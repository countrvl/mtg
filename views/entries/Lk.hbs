<div class="add">
  <div id="cards">
        <h2>Adding a card</h2>
    </div>
<form class="singup" method="post" action="/entries">
  <label for="title-input" class="block mar-b-1 text-white bg-black">Title:</label>
  <input id="title-input" name="title" type="text" value="{{entry.title}}" tabindex="1"
    class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="body-textarea" class="block mar-b-1 text-white bg-black">Image:</label>
  <textarea id="body-textarea" name="img" tabindex="2"
    class="block w-100 h-10 no-resize no-outline no-border no-resize pad-1 mar-b-2">{{entry.body}}</textarea>

  <label for="title-input" class="block mar-b-1 text-white bg-black">Price:</label>
  <input id="title-input" name="price" type="text" value="{{entry.title}}" tabindex="1"
    class="block w-100 no-outline no-border pad-1 mar-b-2">
    
  <label for="title-input" class="block mar-b-1 text-white bg-black">Wear & tear:</label>
  <input id="title-input" name="wear" type="text" value="{{entry.user_id}}" tabindex="1"
    class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="title-input" class="block mar-b-1 text-white bg-black">City:</label>
  <input id="title-input" name="city" type="text" value="{{entry.user_id}}" tabindex="1"
    class="block w-100 no-outline no-border pad-1 mar-b-2">

  <input type="submit" value="Publish" tabindex="3"
    class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>
</div>

<div id="listCard">
    <div id="cards">
